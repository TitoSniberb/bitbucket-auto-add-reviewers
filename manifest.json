{
  "manifest_version": 3,
  "name": "CRXJS React Vite Example",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/scripts/content.js"
      ]
    }
  ],
  "icons": {
    "16": "src/assets/bitbucket.png",
    "32": "src/assets/bitbucket.png",
    "48": "src/assets/bitbucket.png",
    "128": "src/assets/bitbucket.png"
  }
}